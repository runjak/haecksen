import { getCollection, type RenderResult } from "astro:content";

import "reveal.js/dist/reveal.css";
import "reveal.js/dist/theme/black.css";

export async function getStaticPaths() {
  const slides = await getCollection("slides");
  const slideSets = Array.from(
    new Set(slides.map((slide) => slide.data.slideSet))
  );

  return slideSets.map((slideSet) => ({
    params: { slug: slideSet },
    props: { slideSet },
  }));
}

interface Props {
  slideSet: string;
}

const { slideSet } = Astro.props;

const slides = await getCollection("slides").then((slides) =>
  slides.filter((slide) => slide.data.slideSet === slideSet)
);

const contentMap = Object.fromEntries(
  await Promise.all(
    slides.map(
      async (slide): Promise<[string, RenderResult]> => [
        slide.slug,
        await slide.render(),
      ]
    )
  )
);
